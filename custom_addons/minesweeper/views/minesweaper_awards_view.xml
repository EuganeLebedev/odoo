<?xml version="1.0"?>
<odoo>
    <record id="minesweaper_awards_action" model="ir.actions.act_window">
        <field name="name">Awards</field>
        <field name="res_model">minesweeper.awards</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="minesweaper_awards_view_tree" model="ir.ui.view">
        <field name="name">minesweeper.awards.tree</field>
        <field name="model">minesweeper.awards</field>
        <field name="arch" type="xml">
            <tree string="Minesweaper awards">
                <field name="name"/>
                <field name="requirements"/>
            </tree>
        </field>
    </record>

    <record id="minesweaper_games_view_form" model="ir.ui.view">
        <field name="name">minesweeper.awards.form</field>
        <field name="model">minesweeper.awards</field>
        <field name="arch" type="xml">
            <form string="Minesweaper awards">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="requirements"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
